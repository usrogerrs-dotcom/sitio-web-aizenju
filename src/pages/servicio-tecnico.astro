  {
    key: 'tablet',
    title: 'TABLET',
    image: 'https://images.unsplash.com/photo-1510557880182-3d4d3cba35a5?q=80&w=1600&auto=format&fit=crop',
    issues: ['Pantalla rota', 'No carga', 'No enciende', 'Batería agotada', 'Lento'],
    eta: '24 - 72 horas',
    helpModelImg: 'https://images.unsplash.com/photo-1496181133206-80ce9b88a853?q=80&w=1200&auto=format&fit=crop',
