  {
    key: 'play',
    title: 'PLAYSTATION',
    image: 'https://images.unsplash.com/photo-1603483209288-42c8efb09c8b?q=80&w=1600&auto=format&fit=crop',
    issues: ['No enciende', 'HDMI dañado', 'Sobrecalentamiento', 'Almacenamiento', 'Limpieza interna'],
