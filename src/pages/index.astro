---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <meta http-equiv="refresh" content="0; url=/setups" />
  <script>
    if (typeof window !== 'undefined') window.location.replace('/setups');
  </script>
  <section class="redir" aria-label="Redirección">
    <div class="wrap">
      <h1>Redirigiendo a Setups de PC…</h1>
      <p>Si no eres redirigido automáticamente, <a href="/setups">haz clic aquí</a>.</p>
    </div>
  </section>
</Layout>

<style>
  .redir { padding: 140px 20px; text-align: center; }
  .wrap { max-width: 900px; margin: 0 auto; }
</style>
